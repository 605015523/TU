<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.tu.user.act.dao.UserAct" table="user_act" catalog="activity">

		<composite-id>
			<key-property name="userId" column="user_id" type="java.lang.Integer">
			</key-property>
			<key-property name="actId" column="act_id" type="java.lang.Integer">
			</key-property>
		</composite-id>

		<property name="nbParticipants" type="java.lang.Integer">
			<column name="participator_number"/>
		</property>
		<property name="consumption" type="java.lang.Float">
			<column name="consumption"  />
		</property>
		<property name="remark" type="java.lang.String">
			<column name="remark" length="500" />
		</property>


	</class>
</hibernate-mapping>
